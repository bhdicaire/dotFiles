# EditorConfig — https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Makefiles REQUIRE tabs
[{Makefile,makefile,GNUmakefile,*.mk}]
indent_style = tab

# Terminfo files use tabs
[*.terminfo]
indent_style = tab

# Git config uses tabs by convention
[dot_config/git/config.tmpl]
indent_style = tab

# Vim colorschemes — third-party, don't enforce
[dot_vim/colors/*.vim]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset

# Contributor Covenant — don't enforce indent rules
[.github/CODE_OF_CONDUCT.md]
indent_size = unset
