[user]
		name = {{ .name | quote }}
		email = {{ .email | quote }}
		signingkey = ~/.ssh/id_ed25519.pub

[core]
	excludesFile = ~/.config/git/gitignore_global

[init]
	defaultBranch = main

[color]
	ui = true

[gpg]
	format = ssh

[commit]
	gpgsign = true

[status]
	submoduleSummary = true # Enable submodule summary of commits

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
		path = ~/.config/git/aliases

